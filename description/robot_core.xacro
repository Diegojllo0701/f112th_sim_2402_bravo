<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Include Inertial Macros -->
  <xacro:include filename="inertial_macros.xacro"/>

  <!-- Base Footprint Joint -->
  <joint name="base_footprint_joint" type="fixed">
    <parent link="base_link"/>
    <child link="base_footprint"/>
    <origin xyz="0 0 0"/>    
  </joint>

  <!-- Base Footprint Link -->
  <link name="base_footprint"/>

  <!-- Base Link -->
  <link name="base_link"/>

  <!-- Base Link to Chassis Joint -->
  <joint name="base_link_joint" type="fixed">
    <parent link="base_link"/>
    <child link="chassis"/>
    <origin xyz="0 0 0.065"/> 
  </joint>

  <!-- Chassis Link -->
  <link name="chassis">
    <visual>
      <origin xyz="0 0 0"/>
      <geometry>
        <box size="0.24 0.15 0.06"/>
      </geometry>
      <material name="white"/>
    </visual>
    <collision>
      <origin xyz="0 0 0"/>
      <geometry>
        <box size="0.24 0.15 0.06"/>
      </geometry>
    </collision>
    <xacro:inertial_box mass="3.0" x="0.24" y="0.15" z="0.06">
      <origin xyz="0 0 0"/>
    </xacro:inertial_box>
  </link>

  <!-- Left Steering Joint -->
  <joint name="left_steering_joint" type="revolute">
    <parent link="chassis"/>
    <child link="left_steering_link"/>
    <origin xyz="0.12 0.09 -0.0375" rpy="1.5708 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-0.5" upper="0.5" effort="1000" velocity="1.0"/>
  </joint>

  <!-- Left Steering Link -->
  <link name="left_steering_link"/>

  <!-- Front Left Wheel Joint -->
  <joint name="front_left_wheel_joint" type="continuous">
    <parent link="left_steering_link"/>
    <child link="front_left_wheel"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- Front Left Wheel Link -->
  <link name="front_left_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.0375" length="0.025"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.0375" length="0.025"/>
      </geometry>
    </collision>
    <xacro:inertial_cylinder mass="0.1" length="0.025" radius="0.0375">
      <origin xyz="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>

  <!-- Right Steering Joint -->
  <joint name="right_steering_joint" type="revolute">
    <parent link="chassis"/>
    <child link="right_steering_link"/>
    <origin xyz="0.12 -0.09 -0.0375" rpy="1.5708 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-0.5" upper="0.5" effort="1000" velocity="1.0"/>
  </joint>

  <!-- Right Steering Link -->
  <link name="right_steering_link"/>

  <!-- Front Right Wheel Joint -->
  <joint name="front_right_wheel_joint" type="continuous">
    <parent link="right_steering_link"/>
    <child link="front_right_wheel"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- Front Right Wheel Link -->
  <link name="front_right_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.0375" length="0.025"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.0375" length="0.025"/>
      </geometry>
    </collision>
    <xacro:inertial_cylinder mass="0.1" length="0.025" radius="0.0375">
      <origin xyz="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>

  <!-- Rear Left Wheel Joint -->
  <joint name="rear_left_wheel_joint" type="continuous">
    <parent link="chassis"/>
    <child link="rear_left_wheel"/>
    <origin xyz="-0.12 0.09 -0.0375" rpy="1.5708 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- Rear Left Wheel Link -->
  <link name="rear_left_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.0375" length="0.025"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.0375" length="0.025"/>
      </geometry>
    </collision>
    <xacro:inertial_cylinder mass="0.1" length="0.025" radius="0.0375">
      <origin xyz="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>

  <!-- Rear Right Wheel Joint -->
  <joint name="rear_right_wheel_joint" type="continuous">
    <parent link="chassis"/>
    <child link="rear_right_wheel"/>
    <origin xyz="-0.12 -0.09 -0.0375" rpy="1.5708 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- Rear Right Wheel Link -->
  <link name="rear_right_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.0375" length="0.025"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.0375" length="0.025"/>
      </geometry>
    </collision>
    <xacro:inertial_cylinder mass="0.1" length="0.025" radius="0.0375">
      <origin xyz="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>

  <!-- Camera Joint -->
  <joint name="camera_joint" type="fixed">
    <parent link="chassis"/>
    <child link="camera_link"/>
    <origin xyz="0.10 0 0.04"/>
  </joint>

  <!-- Camera Link -->
  <link name="camera_link">
    <visual>
      <geometry>
        <box size="0.025 0.09 0.02"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.025 0.09 0.02"/>
      </geometry>
    </collision>
    <xacro:inertial_box mass="0.05" x="0.025" y="0.09" z="0.02">
      <origin xyz="0 0 0"/>
    </xacro:inertial_box>
  </link>
  
</robot>
